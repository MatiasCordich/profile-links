---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&family=Roboto+Mono:wght@100..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* FONTS */
    --p-font: "Montserrat", sans-serif;
    --s-font: "Roboto Mono", monospace;

    /* COLORS */
    --white: #fafafa;
    --grey: #B4B4B8;
    --blue: #34495E;
    --black: #000000;
  }

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }


  html {
    font-size: 62.5%;
  }

  body {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.8rem;
    font-family: var(--p-font);
    background-image: radial-gradient(rgb(222, 222, 222) 10%, transparent 10%);
    background-position: 8px 8px;
    background-size: 16px 16px;
    background-color: rgb(246, 245, 245);
  }

  li {
    list-style: none;
  }

  a {
    text-decoration: none;
  }

  img {
    max-width: 100%;
  }

  @media (min-width: 900px) {
      html,
      body{
        width: 100%;
        min-height: 100vh;
      }
  }
</style>
